<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HdmiFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_hdmi"
        android:layout_marginTop="50dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/androidTvButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/action_android_tv" />
    <Button
        android:id="@+id/hdmi1Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/action_hdmi1"/>
    <Button
        android:id="@+id/hdmi2Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/action_hdmi2"/>
</LinearLayout>